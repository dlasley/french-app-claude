# Anthropic API Key
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Feature Flags (set to 'true' to enable)
# Show study code text and QR code to students (progress tracking always active)
NEXT_PUBLIC_SHOW_STUDY_CODE=false
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=false
# Leitner adaptive question selection (spaced repetition)
NEXT_PUBLIC_ENABLE_LEITNER=false

# Skip Fuzzy Logic (server-only, no rebuild required - just restart server)
# false = Use fuzzy logic first, Semantic API only when needed (cost-efficient)
# true = Skip fuzzy logic, always use Semantic API (higher accuracy, higher cost)
SKIP_FUZZY_LOGIC=false

# Supabase Configuration (required)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Authentication (only needed if ADMIN_PANEL is enabled)
# ADMIN_PASSWORD=your_secure_password
# ADMIN_SESSION_SECRET=random_hex_string_for_cookie_signing

# Supabase Secret API Key (server-only, for admin operations and scripts)
# Found in Supabase Dashboard > Settings > API > Publishable and secret API keys
# SUPABASE_SECRET_KEY=your_secret_api_key
